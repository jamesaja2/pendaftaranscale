// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  PARTICIPANT
  VISITOR
}

enum Category {
  JASA
  BARANG
  FNB
}

enum PaymentStatus {
  PENDING
  PAID
  VERIFIED
  EXPIRED
}

enum PaymentMethod {
  QRIS
  MANUAL_TRANSFER
}

enum PaymentPlan {
  FULL
  DOWN_PAYMENT
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  name      String?
  image     String?
  role      Role     @default(PARTICIPANT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  team      Team?
  votes     Vote[]
}

model VotingEvent {
  id          String   @id @default(cuid())
  title       String
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  
  votes       Vote[]
}

model Vote {
  id        String   @id @default(cuid())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId    String

  event     VotingEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId   String

  createdAt DateTime @default(now())

  @@unique([eventId, userId])
}

model Notification {
  id        String   @id @default(cuid())
  title     String
  message   String   @db.Text
  createdAt DateTime @default(now())
}

model Student {
  id        String   @id @default(cuid())
  nis       String   @unique
  name      String
  class     String
}

model GlobalSettings {
  id          String   @id @default(cuid())
  key         String   @unique // guidebook, event_poster, slider_images, whatsapp_group_link, payment_qr_image, payment_gateway_id, payment_gateway_key, booth_layout
  value       String   @db.Text
  description String?
  updatedAt   DateTime @updatedAt
}

model Resource {
  id        String   @id @default(cuid())
  title     String
  fileUrl   String
  createdAt DateTime @default(now())
}

model Team {
  id              String   @id @default(cuid())
  name            String?  // Made optional as it might be filled in step 3
  
  // Leader info from Student lookup
  leaderNis       String?
  leaderName      String?
  leaderClass     String?
  
  // Members info (JSON array of { nis, name, class })
  members         String?  @db.Text 
  
  contactInfo     String?
  category        Category @default(FNB) // Default value for safety
  
  // Relations
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // FnB Specific
  mainIngredientId String?
  mainIngredient   Ingredient? @relation(fields: [mainIngredientId], references: [id])

  // Location
  boothLocationId String?  @unique
  boothLocation   BoothLocation? @relation(fields: [boothLocationId], references: [id])

  // Payment
  paymentStatus   PaymentStatus @default(PENDING)
  paymentMethod   PaymentMethod @default(QRIS)
  paymentTrxId    String?       @unique // YoGateway REF ID
  paymentUrl      String?       // Deprecated if using embedded QR, but good to keep
  paidAt          DateTime?
  paymentDeadline DateTime?
  paymentPlan     PaymentPlan?
  paymentPlanAcceptedAt DateTime?
  manualPaymentAmount Int?
  manualPaymentNote   String?    @db.Text
  manualPaymentProof  String?
  manualPaymentSubmittedAt DateTime?
  
  // Terms
  acceptedTerms   Boolean       @default(false)
  
  // Dashboard Items
  posUsername     String?
  posPassword     String?
  logo            String? 

  // Submissions
  bmcFile         String? 
  bmcSubmittedAt  DateTime?

  promoVideo      String?
  promoPoster     String?
  
  inventoryFile   String?
  inventorySubmittedAt DateTime?
  
  promotionalSubmittedAt DateTime?

  // Admin Verification
  verifiedAt      DateTime?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  votes           Vote[]
  submissions     Submission[]
  inventoryItems  InventoryItem[]
  inventorySubmission InventorySubmission?
  products        Product[]
  productSubmission ProductSubmission?
  payout          TeamPayout?
}

enum PayoutStatus {
  WAITING_VERIFICATION
  PROCESSING
  TRANSFERRED
}

model TeamPayout {
  id                 String        @id @default(cuid())
  teamId             String        @unique
  recordedAmount     Float?
  status             PayoutStatus  @default(WAITING_VERIFICATION)
  bankAccountName    String?
  bankAccountNumber  String?
  adminNotes         String?       @db.Text
  participantNotes   String?       @db.Text
  updatedBy          String?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  team               Team          @relation(fields: [teamId], references: [id], onDelete: Cascade)
}

model Ingredient {
  id        String  @id @default(cuid())
  name      String  @unique
  
  teams     Team[]  // One-to-Many inverted (Used by team.mainIngredient)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BoothLocation {
  id        String  @id @default(cuid())
  name      String  @unique // e.g., "A1", "B2"
  
  team      Team?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SystemConfig {
  id              String @id @default(cuid())
  key             String @unique // e.g. "bmc_due_date", "guidebook_url", "denah_url"
  value           String
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model SubmissionTask {
  id             String   @id @default(cuid())
  title          String
  description    String?
  instructions   String?  @db.Text
  allowFile      Boolean  @default(true)
  allowLink      Boolean  @default(true)
  acceptMimeTypes String? @db.Text
  dueDate        DateTime?
  order          Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  submissions    Submission[]
}

model Submission {
  id          String   @id @default(cuid())
  teamId      String
  taskId      String
  fileUrl     String?
  linkUrl     String?
  submittedAt DateTime @default(now())
  isLate      Boolean  @default(false)
  reviewed    Boolean  @default(false)
  feedback    String?  @db.Text

  team        Team           @relation(fields: [teamId], references: [id], onDelete: Cascade)
  task        SubmissionTask @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@unique([teamId, taskId])
}

enum ItemCategory {
  ELEKTRONIK
  PERALATAN
  FURNITURE
  DEKORASI
  LAINNYA
}

model InventoryItem {
  id          String       @id @default(cuid())
  teamId      String
  name        String
  category    ItemCategory
  quantity    Int          @default(1)
  unit        String?      // pcs, buah, set, dll
  description String?      @db.Text
  
  // Elektronik specific
  watt        Float?
  ampere      Float?
  voltage     Float?
  brand       String?
  
  // Peralatan specific
  material    String?
  dimensions  String?      // e.g., "50cm x 30cm x 20cm"
  weight      Float?       // in kg
  
  // General
  condition   String?      // Baru, Bekas Baik, dll
  notes       String?      @db.Text
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  team        Team         @relation(fields: [teamId], references: [id], onDelete: Cascade)
  
  @@index([teamId])
}

model InventorySubmission {
  id          String   @id @default(cuid())
  teamId      String   @unique
  submittedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  team        Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
}

model Product {
  id          String   @id @default(cuid())
  teamId      String
  name        String
  description String?  @db.Text
  imageUrl    String?
  
  // Pricing
  price       Float    @default(0) // Base price
  
  // Stock Management
  stock       Int?     // null = unlimited
  isAvailable Boolean  @default(true)
  
  // Category
  category    String?  // Makanan, Minuman, Snack, dll
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  team        Team            @relation(fields: [teamId], references: [id], onDelete: Cascade)
  variants    ProductVariant[]
  addons      ProductAddon[]
  
  @@index([teamId])
}

model ProductVariant {
  id              String   @id @default(cuid())
  productId       String
  name            String   // e.g., "Small", "Medium", "Large" or "Pedas", "Original"
  additionalPrice Float    @default(0) // Harga tambahan dari base price
  isRequired      Boolean  @default(false) // Apakah harus dipilih (radio) atau optional (checkbox)
  order           Int      @default(0) // Urutan tampilan
  isAvailable     Boolean  @default(true)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  product         Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@index([productId])
}

model ProductAddon {
  id          String   @id @default(cuid())
  productId   String
  name        String   // e.g., "Extra Cheese", "Extra Pedas", "Es Batu"
  price       Float    @default(0) // Harga addon
  isAvailable Boolean  @default(true)
  order       Int      @default(0) // Urutan tampilan
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@index([productId])
}

model ProductSubmission {
  id          String   @id @default(cuid())
  teamId      String   @unique
  submittedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  team        Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
}

